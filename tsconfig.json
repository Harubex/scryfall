{
    "compilerOptions": {
        "diagnostics": false,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "allowUnreachableCode": false,
        "emitDeclarationOnly": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "emitBOM": true,
        "noEmitHelpers": false,
        "module": "commonjs",
        "importHelpers": false,
        "sourceMap": false,
        "typeRoots": [
            "./node_modules/@types/*"
        ],
        "types": [
            "node",
            "mocha"
        ],
        "disableSizeLimit": true,
        "moduleResolution": "node",
        "target": "esnext",
        "strict": false,
        "declaration": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "alwaysStrict": true,
        "charset": "utf8",
        "outDir": "build",
        "lib": [
            "esnext"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "src/test/**/*"
    ],
    "compileOnSave": true
}