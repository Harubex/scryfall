{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "sourceMap": true,
        "baseUrl": ".",
        "alwaysStrict": true,
        "declaration": true,
        "outDir": "./build",
        "types": [
            "./typings/Scryfall.d.ts"
        ],
        "typeRoots": [
            "node_modules/@types",
            "./typings"
        ],
        "paths": {
